# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/it-ojt-platform
# For MongoDB Atlas (cloud): mongodb+srv://username:password@cluster.mongodb.net/it-ojt-platform

# JWT Secret (IMPORTANT: Change this to a random string in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token Expiration
JWT_EXPIRE=30d

# Google OAuth (Optional - if using Google Sign-in)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Client URL (Frontend URL)
CLIENT_URL=http://localhost:3000

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (Required for Password Reset)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# Session Secret
SESSION_SECRET=your-session-secret-change-this-in-production

# CORS Settings
CORS_ORIGIN=http://localhost:3000
